<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal" >

        <com.facebook.widget.ProfilePictureView
            android:id="@+id/selection_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            facebook:preset_size="small" >
        </com.facebook.widget.ProfilePictureView>

        <TextView
            android:id="@+id/selection_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="20sp" />
    </LinearLayout>
    
    <ImageView
        android:id="@+id/rest_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:scaleType="fitXY"
        android:contentDescription="Restaurant Image"
        android:layout_weight="0.5"
        android:src="@drawable/rest_food" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_weight="0.4"
         >

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginBottom="2dp"
            android:text="@string/welcome_text" />

        <Button
            android:id="@+id/qrscan_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="launchQRScanner"
            android:layout_weight="0.1"
            android:text="@string/scan_qr_codes" />
        
        <TextView
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginTop="3dp"
            android:layout_weight="0.1"
            android:layout_marginBottom="1dp"
            android:text="OR" />

        <Button
            android:id="@+id/open_res_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="openSampleRestaurantMenu"
            android:layout_weight="0.1"
            android:layout_marginBottom="2dp"
            android:text="@string/open_sample_res_menu" />
    </LinearLayout>

</LinearLayout>